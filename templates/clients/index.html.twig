{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Comments</th>
                <th>Groups</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.lastname }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.comments }}</td>
                <td>
                {% for group in client.groups %}
                    {{ group }}
                    {% if not loop.last  %} 
                        ,
                    {% endif %}
                {% endfor %}
                </td>
                <td>
                    <a href="{{ path('clients_edit', {'id': client.id}) }}">edit</a>
                    <a href="{{ path('clients_show', {'id': client.id}) }}">show</a>
                    {{ include('clients/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success"  href="{{ path('clients_new') }}">Create new</a>
{% endblock %}
